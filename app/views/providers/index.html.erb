<div class="card">
  <div class="card-header">
    <h1>Providers</h1>
  </div>
  <div class="card-body">
    <table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Provider</th>
      <th>Email</th>
      <th>Tax</th>
      <th>Licence</th>
      <th>Address</th>
      <th>Npi</th>
      <th>Phone</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @providers.each do |provider| %>
      <tr>
        <td><%= link_to provider.provider_name, provider %></td>
        <td><%= provider.provider_email %></td>
        <td><%= provider.tax_id %></td>
        <td><%= provider.provider_licence %></td>
        <td><%= provider.provider_address %></td>
        <td><%= provider.NPI %></td>
        <td><%= provider.phone %></td>
        <td><%= link_to 'Edit', edit_provider_path(provider) %></td>
        <td><%= link_to 'Destroy', provider, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
<%= link_to 'New Provider', new_provider_path, class:"btn btn-primary" %>
  </div>
</div>