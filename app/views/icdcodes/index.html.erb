<p id="notice"><%= notice %></p>

<h1><%= link_to 'Icdcodes', icdcodes_path %></h1>

<%= form_for "", url: icdcodes_path, role: 'search', method: :get do %>
  <%= text_field_tag(:diagnosis_code, @search_by_diagnosis_code, options = {:size => "134", :placeholder => "Search Diagnosis Code or Full Code or Abbreviated Description or Category Title"})%>
<% end %>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Category code</th>
      <th>Diagnosis code</th>
      <th>Full code</th>
      <th>Abbreviated description</th>
      <th>Category title</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @icdcodes.each do |icdcode| %>
      <tr>
        <td><%= icdcode.category_code %></td>
        <td><%= icdcode.diagnosis_code %></td>
        <td><%= icdcode.FULL_CODE %></td>
        <td><%= icdcode.abbreviated_description %></td>
        <td><%= icdcode.category_title %></td>
        <td><%= link_to 'Show', icdcode %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Icdcode', new_icdcode_path %>
