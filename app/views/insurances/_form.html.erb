<%= form_with(model: insurance, local: true) do |form| %>
  <% if insurance.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(insurance.errors.count, "error") %> prohibited this insurance from being saved:</h2>

      <ul>
        <% insurance.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field form-group">
    <%= form.text_field :insurance_id, placeholder: "insurance id", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insured_name, placeholder: "insurer name", class:"form-control" %>
  </div>

  <div class="field form-group">
  Birth of insurer : 
    <%= form.date_select :insured_birth, placeholder: "the date of birth of insurer",  :start_year => 1900, :end_year => 2020, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insured_ssn, placeholder: "insurer ssn", class:"form-control" %>
  </div>

  <div class="field form-group">
  Policy start date : 
    <%= form.date_select :insurance_start_date, class:"form-control" %>
  </div>

  <div class="field form-group">
  Policy start date : 
    <%= form.date_select :insurance_end_date, class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :insurance_limitation, placeholder: "insurance limitation", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.number_field :insurance_deductible, placeholder: "insurance deductible", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insurance_copay_rate, placeholder: "insurance copay rate", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insurance_company_name, placeholder: "insurance company name", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insurance_company_address, placeholder: "insurance company address", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insurance_company_phone, placeholder: "insurance company phone", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insurance_company_email, placeholder: "insurance company email", class:"form-control" %>
  </div>

  <div class="field form-group">
    <%= form.text_field :insurance_company_website, placeholder: "insurance company website", class:"form-control" %>
  </div>

  <div class="actions form-group">
    <%= form.submit class: "btn btn-outline-primary btn-sm" %>
  </div>
<% end %>
