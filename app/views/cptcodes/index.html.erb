<p id="notice"><%= notice %></p>

<h1><%= link_to 'Cptcodes', cptcodes_path %></h1>

<%= form_for "", url: cptcodes_path, role: 'search', method: :get do %>
  <%= text_field_tag(:cpt_description, @search_by_cpt_description, options = {:size => "134", :placeholder => "Search by Cpt code or Cpt Description"})%>
<% end %>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Cpt code</th>
      <th>Cpt description</th>
      <th>Cpt price</th>
      <th colspan="1"></th>
    </tr>
  </thead>

  <tbody>
    <% @cptcodes.each do |cptcode| %>
      <tr>
        <td><%= cptcode.cpt_code %></td>
        <td><%= cptcode.cpt_description %></td>
        <td><%= cptcode.cpt_price %></td>
        <td><%= link_to 'Show', cptcode %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Cptcode', new_cptcode_path %>
