
<h1>Bills</h1>


<%= form_for "", url: bills_path, role: 'search', method: :get do %>
  <%= text_field_tag(:bill_info, @search_bill, options = {:size => "134", :placeholder => "Search by bill id or patient id or date or insurance id"})%>
  
<% end %>
<br/>

<table class="table table-striped table-bordered table-hover">
  <thead>
    <tr>
      <th>Bill_id</th>
      <th>Date</th>
      <th>Patient_id</th>
      <th>Diagnosis_code</th>
      <th>Cpt_codes</th>
      <th>Total_price</th>
      <th>Is_paid</th>
      <th>Insurrance_id</th>
      <th>Delete</th>
      <th>Superbill</th>
    </tr>
  </thead>

  <tbody>
    <% @bills.each do |bill| %>
      <tr>
        <td><%= link_to bill.id, bill %></td>
        <td><%= bill.bill_date %></td>
        <td><%= bill.patient_id %></td>
        <td><%= bill.diagnosis_code %></td>
        <td><%= bill.cpt_code %></td>
        <td><%= bill.total_price %></td>
        <td><%= bill.is_paid %></td>
        <td><%= bill.insurrance_id %></td>
        <td><%= link_to 'Cancel', bill, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Show superbill', home_superbill_path(:bill_id => bill.id)%></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Bill', new_bill_path %>
